<%- include('./partials/navbar') -%>
    <div>
        <h2 class="topNav"> Cats > General</h2>
        <div class="mainForum customContainer">

        <% if (posts.length> 0) {%>
            <% posts.forEach(post=> { %>
                <div class="forumPost">
                    <h3 class="forumPostSnip">
                        <a href="/post/<%= post._id %>">
                            <%= post.title %>
                        </a>
                    </h3>
                    <div><%= post.submittedBy %>, <%- post.date %> 
                    </div>
                    <div>(<%- post.comments.length %>) comments</div> 

                </div>
                <% }) %>
                    <% } else { %>
                        <p>There are no posts to display...w</p>
                        <% } %>
                    </div>
    </div>

<%- include('./partials/footer') -%>