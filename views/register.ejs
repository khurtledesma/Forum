<div class="login">
  <h1 class="text-center">Register</h1>
  <%- include ('./partials/messages') %>
    <form action="/users/register" method="POST" class="container">
      <div class="form-group">
        <label for="name" hidden>Name</label>
        <input class="form-control" type="name" name="name" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
      </div>
      <div class="form-group">
        <label for="email" hidden>Email</label>
        <input class="form-control" type="email" name="email" placeholder="Enter Email"
          value="<%= typeof email != 'undefined' ? email : '' %>" />
      </div>
      <div class="form-group">
        <label for="password" hidden>Password</label>
        <input class="form-control" type="password" name="password" placeholder="Create Password"
          value="<%= typeof password != 'undefined' ? password : '' %>" />
      </div>
      <div class="form-group">
        <label for="password2" hidden>Confirm Password</label>
        <input class="form-control" type="password" name="password2" placeholder="Confirm Password"
          value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
      </div>
      <button type="submit" class="btn btn-primary btn-block">
        Register
      </button>
      <p>Have An Account? <a href="/users/login">Login</a></p>
    </form>

</div>