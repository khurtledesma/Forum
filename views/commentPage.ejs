<%- include('./partials/navbar') -%>
    <div>
        <h2 class="topNav"><a href="/main/#<%= posts.category %>">
                <%= posts.category %>
            </a> > <a href="/<%= posts.category %>/<%=posts.subCategory%>"><%= posts.subCategory %></a>
        </h2>
        <div class="customContainer">
            <div class="forumPost">
                <div class="forumPostHead"><%= posts.date %></div>
                    <div class="row">
                    <div class="col-md-2 userIcon">
                        <img src="/img/userIcon.png">
                        <figcaption class="text-center"><%= posts.submittedBy.name  %></figcaption>
                    </div>
                    <div class="forumPostBody col-md-10">
                        <h4 class="forumPostTitle">
                            <%= posts.title %>
                        </h4>
                    <p class="forumPostMain"><%= posts.body %></p>
                    </div>
                </div>
            </div>

                <div class="forumPost">
                    <% if ( posts.comments.length> 0) {%>
                        <% posts.comments.forEach(post=> { %>
                    <div class="forumPostHead"><%= post.date %></div>
                        <div class="row">
                        <div class="col-md-2 userIcon">
                            <img src="/img/userIcon.png">
                            <figcaption class="text-center"><%= post.submittedBy.name  %></figcaption>
                        </div>
                        <div class="forumPostBody col-md-10">
                        <p class="forumPostMain"><%= post.body %></p>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>There are no replies to this post. Leave one below!</p>
                            <% } %>
                </div>

                <div class="addNewComment">
                    <form class="form-group text-center" method="POST" action="/post/<%= posts._id %>/comments">
                        <textarea name="commentBody" class="form-control"
                            placeholder="Leave a comment here!"></textarea>
                        <button type="submit" class="btn btn-primary btn-block">Comment</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>